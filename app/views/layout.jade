doctype html
html(lang="en", xmlns="http://www.w3.org/1999/xhtml")

  head
    title(ng-bind="pageTitle + ' | SenseForage'")

    meta(charset="utf-8")
    meta(http-equiv="Content-type", content="text/html;charset=UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge, chrome=1")
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1")
    meta(name="apple-mobile-web-app-capable", content="yes")
    meta(name="apple-mobile-web-app-status-bar-style", content="black")

    meta(name="keywords", data-ng-bind="metaKeywords")
    meta(name="description", data-ng-bind="metaDescription")

    meta(property="fb:app_id", content="{{facebookAppId}}")
    meta(property="og:site_name", content="Sense Forage")
    meta(property="og:title", data-ng-bind="pageTitle")
    meta(property="og:description" data-ng-bind="metaDescription")
    meta(property="og:url" data-ng-bind="url")
    meta(property="og:image" data-ng-bind="'http:' + metaImage")
    meta(property="og:type" content="website")

    link(rel="stylesheet", type="text/css", href="//fonts.googleapis.com/css?family=Source+Sans+Pro:200,300,400")
    link(rel="stylesheet", type="text/css", href="//fonts.googleapis.com/css?family=Playfair+Display:700italic")
    link(rel="stylesheet", type="text/css", href="//fonts.googleapis.com/css?family=Ovo")
    link(rel="stylesheet", type="text/css", href="//fonts.googleapis.com/css?family=Neuton:200,400")

    <link href="//crosscent.s3.amazonaws.com/logo.ico" rel="shortcut icon" type="image/x-icon">

    for cssFile in cssFiles
      link(rel="stylesheet", href='/'+cssFile)
    base(href="/")
  body(class="ng-cloak")
    header(data-ng-include="'public/modules/core/views/header.client.view.html'", class="navbar navbar-fixed-top")
    section
      block content
    footer(data-ng-include="'public/modules/core/views/footer.client.view.html'")
    for jsFile in jsFiles
      script(type="text/javascript" src=jsFile)
